<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nombre_usuario_comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="Nombre Usuario"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_usuario_comentario"
        android:layout_alignLeft="@+id/nombre_usuario_comentario"
        android:text="Comentario"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_calificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_mensaje"
        android:layout_alignLeft="@+id/txt_mensaje"
        android:text="Calificacion"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/txt_calificacion"
        android:layout_marginTop="10dp"
        android:background="@color/gris" />

</RelativeLayout>