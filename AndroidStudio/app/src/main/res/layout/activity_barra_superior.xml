<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:weightSum="100"
    android:background="@drawable/fondo_superior"
    android:paddingTop="40dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/texto_busqueda"
        android:layout_width="0dp"
        android:layout_weight="80"
        android:layout_height="40dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_marginEnd="10dp"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:background="@drawable/fondo_busqueda"
        android:hint="@string/hint_cajon_busqueda"/>

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="0dp"
        android:layout_weight="20"
        android:layout_height="50dp"
        android:fontFamily="@font/font_awesome_6_free_solid_900"
        android:textSize="17sp"
        android:text="\uf002"/>

</LinearLayout>
